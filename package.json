{
  "name": "api",
  "version": "1.0.0",
  "description": "Po.et API Layer for Publishers",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p ./tsconfig.json",
    "lint:fix": "tslint -p ./tsconfig.json --fix",
    "lint:check": "tslint-config-prettier-check ./tslint.json",
    "test:integration": "mocha --timeout 200000 --exit --require ts-node/register -r tsconfig-paths/register ./test/Integration/**/*.ts",
    "start": "node dist/src",
    "start:ci": "npm run maildev && EMAIL_TRANSPORT_MAIL_DEV=true node dist/src > /dev/null 2>&1",
    "start:dev": "nodemon --watch src -L --exec 'ts-node --inspect=0.0.0.0:5858 -r tsconfig-paths/register --cache-directory .tscache' ./src/index.ts",
    "maildev": "maildev &",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetapp/api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/poetapp/api/issues"
  },
  "homepage": "https://github.com/poetapp/api#readme",
  "dependencies": {
    "@po.et/poet-js": "1.2.0",
    "bitcore-lib": "0.15.0",
    "body-parser": "1.18.2",
    "cli-box": "6.0.8",
    "console.table": "0.10.0",
    "dotenv": "6.0.0",
    "isomorphic-fetch": "2.2.1",
    "joi": "13.3.0",
    "joi-password-complexity": "2.0.1",
    "jsonwebtoken": "8.3.0",
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.0",
    "koa-helmet": "4.0.0",
    "koa-router": "7.4.0",
    "koa2-cors": "2.0.5",
    "mongoose": "5.1.5",
    "node-fetch": "2.1.2",
    "node-vault": "0.8.0",
    "nodemailer": "4.6.6",
    "nodemailer-mandrill-transport": "1.2.0",
    "protobufjs": "6.8.6",
    "secure-password": "3.0.0",
    "winston": "3.0.0"
  },
  "devDependencies": {
    "@po.et/frost-client": "0.1.7",
    "@po.et/tslint-rules": "1.2.0",
    "@types/bitcore-lib": "0.15.0",
    "@types/chai": "4.1.4",
    "@types/cheerio": "0.22.7",
    "@types/handlebars": "4.0.38",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/joi": "13.0.8",
    "@types/jsonwebtoken": "7.2.7",
    "@types/koa": "2.0.46",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-helmet": "3.1.2",
    "@types/koa-router": "7.0.28",
    "@types/mocha": "5.2.2",
    "@types/mongodb": "3.0.19",
    "@types/mongoose": "5.0.16",
    "@types/node": "10.3.2",
    "@types/node-fetch": "1.6.9",
    "@types/node-vault": "0.5.2",
    "@types/winston": "2.3.9",
    "chai": "4.1.2",
    "cheerio": "1.0.0-rc.2",
    "husky": "0.14.3",
    "lint-staged": "7.2.0",
    "maildev": "1.0.0-rc3",
    "mailparser": "2.2.0",
    "mocha": "5.1.1",
    "nodemon": "1.17.4",
    "prettier": "1.13.5",
    "ts-node": "6.1.1",
    "tsconfig-paths": "3.4.0",
    "tslint-config-prettier": "1.12.0",
