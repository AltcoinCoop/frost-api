{
  "name": "api",
  "version": "1.0.0",
  "description": "Po.et API Layer for Publishers",
  "main": "index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "start": "node dist",
    "start:ci": "npm run maildev && EMAIL_TRANSPORT_MAIL_DEV=true node dist > /dev/null 2>&1",
    "start:dev": "nodemon --watch src -L --exec 'ts-node --inspect=0.0.0.0:5858 -r tsconfig-paths/register --cache-directory .tscache' ./src/index.ts",
    "maildev": "maildev &",
    "tslint": "tslint -p ./tsconfig.json --fix",
    "tslint:no-fix": "tslint -p ./tsconfig.json",
    "tslint:check": "tslint-config-prettier-check ./tslint.json",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetapp/api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/poetapp/api/issues"
  },
  "homepage": "https://github.com/poetapp/api#readme",
  "dependencies": {
    "@types/handlebars": "^4.0.36",
    "@types/joi": "^10.4.4",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.25",
    "@types/koa-router": "^7.0.26",
    "@types/node-fetch": "^1.6.7",
    "@types/node-vault": "^0.5.0",
    "@types/winston": "^2.3.7",
    "bitcore-lib": "^0.15.0",
    "body-parser": "^1.18.2",
    "cli-box": "^6.0.8",
    "console.table": "^0.9.1",
    "dotenv": "^4.0.0",
    "isomorphic-fetch": "^2.2.1",
    "joi": "^13.0.1",
    "joi-password-complexity": "^2.0.1",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "koa2-cors": "^2.0.5",
    "mongoose": "^4.13.0",
    "node-fetch": "^1.7.3",
    "node-vault": "^0.7.1",
    "nodemailer": "^4.4.0",
    "nodemailer-mandrill-transport": "^1.2.0",
    "poet-js": "^0.2.0",
    "protobufjs": "^6.8.0",
    "secure-password": "^2.1.2",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "@types/mongodb": "^2.2.15",
    "@types/mongoose": "^4.7.25",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "maildev": "^1.0.0-rc3",
    "prettier": "^1.7.4",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.7.3",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2"
  }
}
