{
  "name": "api",
  "version": "1.0.0",
  "description": "Po.et API Layer for Publishers",
  "main": "index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "lint": "tslint -p ./tsconfig.json",
    "lint:fix": "tslint -p ./tsconfig.json --fix",
    "lint:check": "tslint-config-prettier-check ./tslint.json",
    "start": "node dist",
    "start:ci": "npm run maildev && EMAIL_TRANSPORT_MAIL_DEV=true node dist > /dev/null 2>&1",
    "start:dev": "nodemon --watch src -L --exec 'ts-node --inspect=0.0.0.0:5858 -r tsconfig-paths/register --cache-directory .tscache' ./src/index.ts",
    "maildev": "maildev &",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poetapp/api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/poetapp/api/issues"
  },
  "homepage": "https://github.com/poetapp/api#readme",
  "dependencies": {
    "bitcore-lib": "0.15.0",
    "body-parser": "1.18.2",
    "cli-box": "6.0.8",
    "console.table": "0.10.0",
    "dotenv": "5.0.1",
    "isomorphic-fetch": "2.2.1",
    "joi": "13.3.0",
    "joi-password-complexity": "2.0.1",
    "jsonwebtoken": "8.2.1",
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.0",
    "koa-router": "7.4.0",
    "koa2-cors": "2.0.5",
    "mongoose": "5.0.17",
    "node-fetch": "2.1.2",
    "node-vault": "0.8.0",
    "nodemailer": "4.6.4",
    "nodemailer-mandrill-transport": "1.2.0",
    "poet-js": "1.0.3",
    "protobufjs": "6.8.6",
    "secure-password": "3.0.0",
    "winston": "3.0.0-rc1"
  },
  "devDependencies": {
    "@po.et/tslint-rules": "1.2.0",
    "@types/handlebars": "4.0.37",
    "@types/joi": "13.0.8",
    "@types/jsonwebtoken": "7.2.7",
    "@types/koa": "2.0.45",
    "@types/koa-bodyparser": "4.2.0",
    "@types/koa-router": "7.0.28",
    "@types/mongodb": "3.0.18",
    "@types/mongoose": "5.0.13",
    "@types/node-fetch": "1.6.9",
    "@types/node-vault": "0.5.2",
    "@types/winston": "2.3.9",
    "husky": "0.14.3",
    "lint-staged": "7.1.0",
    "maildev": "1.0.0-rc3",
    "prettier": "1.12.1",
    "ts-node": "6.0.3",
    "tsconfig-paths": "3.3.2",
    "tslint-config-prettier": "1.12.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.8.3"
  }
}
